---
interface Props {
  title: string;
  pubDate: Date;
}

const { title, pubDate } = Astro.props as Props;
---

<main class="container">
  <nav aria-label="breadcrumb">
    <ul>
      <li><a href="/">{"< Back"}</a></li>
    </ul>
  </nav>
  <hgroup>
    <h2>{title}</h2>
    <h3>
      {
        new Date(pubDate).toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </h3>
  </hgroup>
  <hr />
  <section>
    <slot />
  </section>
</main>
